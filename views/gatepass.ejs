        `);
        printWindow.document.close();

        printWindow.onload = function() {
          setTimeout(() => {
            printWindow.focus();
            printWindow.print();
          }, 200);
        };
      }

      // small helper to escape user content for injecting into print window
      function escapeHtml(unsafe) {
        if (!unsafe) return '';
        return String(unsafe)
          .replace(/&/g, '&amp;')
          .replace(/</g, '&lt;')
          .replace(/>/g, '&gt;')
          .replace(/"/g, '&quot;')
          .replace(/'/g, '&#039;');
      }
